# Staff Scheduling System - Environment Configuration
# Copy this file to .env and update the values

# Secret key for session management (generate a random string)
SECRET_KEY=your-secret-key-here-change-in-production

# Database URL (SQLite for development, MySQL/PostgreSQL for production)
# SQLite (default):
DATABASE_URL=sqlite:///staff_scheduler.db

# MySQL example:
# DATABASE_URL=mysql+pymysql://user:password@localhost/staff_scheduler

# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost/staff_scheduler

# Flask environment
FLASK_ENV=development
FLASK_DEBUG=1
